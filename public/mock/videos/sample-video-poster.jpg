<svg xmlns="http://www.w3.org/2000/svg" width="1280" height="720" viewBox="0 0 1280 720">
  <defs>
    <linearGradient id="videoBg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect width="1280" height="720" fill="url(#videoBg)"/>

  <!-- Play button circle -->
  <circle cx="640" cy="360" r="80" fill="white" opacity="0.9"/>

  <!-- Play triangle -->
  <polygon points="610,330 610,390 680,360" fill="#667eea"/>

  <!-- Video icon text -->
  <text x="640" y="480" font-family="Arial" font-size="32" font-weight="bold" fill="white" text-anchor="middle" opacity="0.8">Sample Video</text>

  <!-- Duration indicator -->
  <rect x="20" y="670" width="100" height="30" rx="5" fill="black" opacity="0.7"/>
  <text x="70" y="692" font-family="Arial" font-size="20" fill="white" text-anchor="middle">0:03</text>
</svg>