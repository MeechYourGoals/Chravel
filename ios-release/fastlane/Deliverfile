# Chravel Deliver Configuration
# https://docs.fastlane.tools/actions/deliver/

# App identifier
app_identifier("com.chravel.app")

# Username
username(ENV["APPLE_ID"] || "developer@chravel.app")

# Team ID
team_id(ENV["APPLE_TEAM_ID"] || "YOUR_TEAM_ID")

# App Store Connect Team ID
itc_provider(ENV["ITC_TEAM_ID"] || "YOUR_ITC_TEAM_ID")

# Metadata path
metadata_path("../appstore/metadata")

# Screenshots path
screenshots_path("../appstore/screenshots")

# Force upload (don't ask for confirmation)
force(true)

# Skip binary upload (for metadata-only updates)
skip_binary_upload(false)

# Skip screenshots
skip_screenshots(false)

# Skip metadata
skip_metadata(false)

# Overwrite screenshots
overwrite_screenshots(true)

# Don't submit for review automatically
submit_for_review(false)

# Don't auto-release
automatic_release(false)

# Precheck settings
precheck_include_in_app_purchases(false)

# Run precheck before submitting
run_precheck_before_submit(true)

# Submission information
submission_information({
  add_id_info_uses_idfa: false,
  content_rights_contains_third_party_content: false,
  content_rights_has_rights: true,
  export_compliance_uses_encryption: true,
  export_compliance_is_exempt: true,
  export_compliance_encryption_updated: false
})

# Copyright
copyright("#{Time.now.year} Chravel, Inc.")

# Primary category
primary_category("Travel")

# Secondary category
secondary_category("Productivity")

# Age rating
# Configured in App Store Connect manually

# Price tier (0 = Free)
price_tier(0)

# App review information
app_review_information(
  first_name: "Chravel",
  last_name: "Support",
  phone_number: "+1 (555) 555-5555",
  email_address: "support@chravel.app",
  demo_user: "demo@chravel.app",
  demo_password: "DemoTrip2025!",
  notes: <<~NOTES
    Thank you for reviewing Chravel!

    To test key features:
    1. Use the demo account provided
    2. You'll see sample trips with active chats and itineraries
    3. Try creating a new trip to test the AI concierge
    4. Test expense splitting in the "Bali Destination Wedding" trip
    5. Check out the media hub for shared photos

    The app works fully offline after initial sync.

    For any questions during review: support@chravel.app
  NOTES
)
