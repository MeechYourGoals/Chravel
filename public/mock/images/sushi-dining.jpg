    <path d="M 600 350 Q 590 320, 600 300" fill="none" stroke="white" stroke-width="2"/>
    <path d="M 620 360 Q 630 330, 620 310" fill="none" stroke="white" stroke-width="2"/>
    <path d="M 580 355 Q 570 325, 580 305" fill="none" stroke="white" stroke-width="2"/>
