<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="800" viewBox="0 0 1200 800">
  <defs>
    <linearGradient id="nightCity" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#1e3c72;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2a5298;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Sky -->
  <rect width="1200" height="400" fill="url(#nightCity)"/>

  <!-- Buildings silhouette -->
  <rect x="0" y="250" width="200" height="150" fill="#0a1931"/>
  <rect x="200" y="200" width="180" height="200" fill="#0d2545"/>
  <rect x="380" y="180" width="220" height="220" fill="#0a1931"/>
  <rect x="600" y="220" width="190" height="180" fill="#0d2545"/>
  <rect x="790" y="190" width="210" height="210" fill="#0a1931"/>
  <rect x="1000" y="240" width="200" height="160" fill="#0d2545"/>

  <!-- Building windows -->
  <g fill="#ffd700" opacity="0.6">
    <rect x="220" y="220" width="15" height="20"/>
    <rect x="250" y="220" width="15" height="20"/>
    <rect x="220" y="260" width="15" height="20"/>
    <rect x="250" y="260" width="15" height="20"/>
    <rect x="410" y="200" width="15" height="20"/>
    <rect x="440" y="200" width="15" height="20"/>
    <rect x="470" y="200" width="15" height="20"/>
    <rect x="820" y="210" width="15" height="20"/>
    <rect x="850" y="210" width="15" height="20"/>
    <rect x="820" y="250" width="15" height="20"/>
    <rect x="850" y="250" width="15" height="20"/>
  </g>

  <!-- Street -->
  <rect y="400" width="1200" height="400" fill="#2c3e50"/>

  <!-- Crosswalk -->
  <g fill="white" opacity="0.9">
    <rect y="550" width="1200" height="40"/>
    <rect x="0" y="520" width="150" height="20"/>
    <rect x="200" y="520" width="150" height="20"/>
    <rect x="400" y="520" width="150" height="20"/>
    <rect x="600" y="520" width="150" height="20"/>
    <rect x="800" y="520" width="150" height="20"/>
    <rect x="1000" y="520" width="150" height="20"/>
  </g>

  <!-- People crossing -->
  <g>
    <!-- Person 1 -->
    <circle cx="200" cy="540" r="15" fill="#e74c3c"/>
    <rect x="190" y="555" width="20" height="35" rx="3" fill="#c0392b"/>

    <!-- Person 2 -->
    <circle cx="400" cy="545" r="15" fill="#3498db"/>
    <rect x="390" y="560" width="20" height="35" rx="3" fill="#2980b9"/>

    <!-- Person 3 -->
    <circle cx="600" cy="535" r="15" fill="#2ecc71"/>
    <rect x="590" y="550" width="20" height="35" rx="3" fill="#27ae60"/>

    <!-- Person 4 -->
    <circle cx="800" cy="550" r="15" fill="#f39c12"/>
    <rect x="790" y="565" width="20" height="35" rx="3" fill="#e67e22"/>

    <!-- Person 5 -->
    <circle cx="950" cy="540" r="15" fill="#9b59b6"/>
    <rect x="940" y="555" width="20" height="35" rx="3" fill="#8e44ad"/>
  </g>

  <!-- Neon signs -->
  <rect x="250" y="320" width="100" height="40" fill="#ff006e" opacity="0.8"/>
  <rect x="450" y="280" width="120" height="50" fill="#00f5ff" opacity="0.8"/>
  <rect x="850" y="300" width="110" height="45" fill="#7209b7" opacity="0.8"/>
</svg>